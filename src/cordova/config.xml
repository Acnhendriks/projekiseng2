<?xml version='1.0' encoding='utf-8'?>
<widget id="com.telkomsel" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ACN TIVA</name>
    <description>
        Telco Interactive Virtual Assistance
    </description>
    <author email="hendrik.sutrisna@accenture.com" href="http://cordova.io">
        Hendrik Sutrisna
    </author>
    <platform name="android">
        <splash density="port-hdpi" src="res/drawable-port-hdpi/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/drawable-port-ldpi/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/drawable-port-mdpi/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/drawable-port-xhdpi/splash-port-xhdpi.png" />
        <icon density="ldpi" src="res/app-icon/android/telkomsel_logo_ldpi.png" />
        <icon density="mdpi" src="res/app-icon/android/telkomsel_logo_mdpi.png" />
        <icon density="hdpi" src="res/app-icon/android/telkomsel_logo_hdpi.png" />
        <icon density="xhdpi" src="res/app-icon/android/telkomsel_logo_xhdpi.png" />
        <icon density="xxhdpi" src="res/app-icon/android/telkomsel_logo_xxhdpi.png" />
        <icon density="xxxhdpi" src="res/app-icon/android/telkomsel_logo_xxxhdpi.png" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#282828" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="7000" />
    <preference name="BackgroundColor" value="0xff282828" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="LoadUrlTimeoutValue" value="70000" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="android-build-tool" value="gradle" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
</widget>
